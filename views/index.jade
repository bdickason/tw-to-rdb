        a(href='/tw') Twitter: Get Favorites

    .auth
      #twitter
        h3 Authentication
        p 
          a(href='/tw/login') Twitter: Get Access Token
        p 
          a(href='/rdb/login') Readability: Get Access Token

    #debug
      p Session: 
        =JSON.stringify(session)